<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="gr.logistic_i.logistic_i">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:largeHeap="true"
        android:allowBackup="true"
        android:icon="@drawable/logistic_i_flogo_round"
        android:label="@string/app_name"
        android:logo="@drawable/logistic_i_flogo_round"
        android:roundIcon="@drawable/logistic_i_flogo_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".LoginActivity"
            android:windowSoftInputMode="adjustResize">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".MainMenuActivity"
            android:windowSoftInputMode="adjustResize" />
        <activity android:name=".ItemsMenuActivity"
            android:windowSoftInputMode="adjustResize"/>
        <activity android:name=".VoucherDetailsActivity"
            android:windowSoftInputMode="adjustResize"/>
        <activity android:name=".ConfirmVoucher"
            android:windowSoftInputMode="stateVisible"/>
        <activity android:name=".AddProductActivity"
            android:windowSoftInputMode="adjustResize"/>
        <activity android:name=".ShowImage"
            android:windowSoftInputMode="adjustResize"/>
    </application>

</manifest>