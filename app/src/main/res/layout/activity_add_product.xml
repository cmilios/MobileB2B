<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AddProductActivity">

    <ImageView
        android:id="@+id/image_icon1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@mipmap/ic_launcher" />

    <TextView
        android:id="@+id/title"
        android:layout_width="230dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginStart="16dp"
        android:text="Title"
        app:layout_constraintBottom_toBottomOf="@+id/image_icon1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/image_icon1"
        app:layout_constraintTop_toTopOf="@+id/image_icon1" />

    <TextView
        android:id="@+id/mtrlcode"
        android:layout_width="170dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="348dp"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        android:text="mtrlcode"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/image_icon1"
        app:layout_constraintTop_toTopOf="@+id/image_icon1"
        app:layout_constraintVertical_bias="0.777" />

    <TextView
        android:id="@+id/manufacturer"
        android:layout_width="170dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:text="manufacturer"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/mtrlcode"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/mtrlcode"
        app:layout_constraintTop_toBottomOf="@+id/mtrlcode"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Κωδικός Προιόντος:"
        app:layout_constraintBottom_toBottomOf="@+id/mtrlcode"
        app:layout_constraintEnd_toStartOf="@+id/mtrlcode"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/mtrlcode" />

    <TextView
        android:id="@+id/textView11"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Κατασκευαστής:"
        app:layout_constraintBottom_toBottomOf="@+id/manufacturer"
        app:layout_constraintEnd_toStartOf="@+id/manufacturer"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/manufacturer" />

    <TextView
        android:id="@+id/textView10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="80dp"
        android:text="Ποσότητα:"
        app:layout_constraintBottom_toTopOf="@+id/selected_qty"
        app:layout_constraintEnd_toEndOf="@+id/selected_qty"
        app:layout_constraintStart_toStartOf="@+id/selected_qty"
        app:layout_constraintTop_toBottomOf="@+id/manufacturer"
        app:layout_constraintVertical_bias="0.518" />

    <Button
        android:id="@+id/accept_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="setMtrlToMtrLines"
        android:text="ACCEPT"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/selected_qty"
        app:layout_constraintStart_toStartOf="@+id/selected_qty"
        app:layout_constraintTop_toBottomOf="@+id/textView10"
        app:layout_constraintVertical_bias="0.74" />

    <EditText
        android:id="@+id/selected_qty"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="96dp"
        android:ems="10"
        android:inputType="number|numberDecimal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.503"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView11"
        app:layout_constraintVertical_bias="0.381" />

    <TextView
        android:id="@+id/mtrunit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="mtrunit"
        app:layout_constraintBottom_toTopOf="@+id/accept_button"
        app:layout_constraintEnd_toEndOf="@+id/selected_qty"
        app:layout_constraintStart_toStartOf="@+id/selected_qty"
        app:layout_constraintTop_toBottomOf="@+id/selected_qty" />
</android.support.constraint.ConstraintLayout>