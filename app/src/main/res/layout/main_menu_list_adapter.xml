<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:focusable="true"
    android:clickable="true"
    android:background="?android:attr/selectableItemBackground"
    android:foreground="?android:attr/selectableItemBackground"

    android:id="@+id/mm_parent">


    <android.support.design.widget.TextInputLayout
        android:id="@+id/fincode2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/trndate2"
        android:layout_alignTop="@id/textView3"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="-8dp"
        android:layout_toLeftOf="@id/imageView5"
        android:layout_toStartOf="@id/imageView5"
        android:layout_marginStart="12dp"
        android:focusable="false"
        android:clickable="false"
        android:focusableInTouchMode="false">

        <android.support.design.widget.TextInputEditText
            android:id="@+id/fincode"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorTransparent"
            android:gravity="end"
            android:ems="7"
            android:hint="Αριθμός Παραγγελίας"
            android:textColor="@color/colorTextBold"
            android:focusable="false"
            android:clickable="false"
            android:focusableInTouchMode="false"/>

    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/trndate2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginRight="@dimen/textandiconmargin"
        android:layout_below="@id/textView3"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:layout_toLeftOf="@id/textInputLayout"
        android:layout_toStartOf="@id/textInputLayout"
        android:layout_marginEnd="@dimen/textandiconmargin"
        android:focusable="false"
        android:clickable="false"
        android:focusableInTouchMode="false">

        <android.support.design.widget.TextInputEditText
            android:id="@+id/trndate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:hint="Ημερομηνία παραγγελίας"
            android:singleLine="true"
            android:background="@color/colorTransparent"
            android:textColor="@color/colorTextBold"
            android:focusable="false"
            android:clickable="false"
            android:focusableInTouchMode="false"
            android:longClickable="false"/>

    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/textInputLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/trndate2"
        android:layout_alignTop="@id/trndate2"
        android:layout_marginLeft="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="0dp"
        android:layout_marginBottom="8dp"
        android:layout_toLeftOf="@id/imageView5"
        android:layout_toStartOf="@id/imageView5"
        android:focusable="false"
        android:clickable="false"
        android:focusableInTouchMode="false"
        android:longClickable="false">

        <android.support.design.widget.TextInputEditText
            android:id="@+id/sumamnt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorTransparent"
            android:gravity="end"
            android:hint="Συνολική Αξία"
            android:textColor="#000"
            android:textColorHint="#000"
            android:ems="5"
            app:fontFamily="@font/roboto"
            android:focusable="false"
            android:clickable="false"
            android:focusableInTouchMode="false"
            android:longClickable="false"
            />

    </android.support.design.widget.TextInputLayout>

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/trndate2"
        android:background="@color/colorGrey"
        android:scaleType="center"
        app:srcCompat="@drawable/divider"
        android:focusable="false"
        android:clickable="false"
        android:focusableInTouchMode="false"
        android:longClickable="false"/>

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_toLeftOf="@id/fincode2"
        android:layout_alignParentLeft="true"

        android:text="Παραστατικό: "
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        android:textColor="@color/colorTextBold"
        android:layout_toStartOf="@id/fincode2"
        android:layout_alignParentStart="true"
        android:focusable="false"
        android:clickable="false"
        android:focusableInTouchMode="false"
        android:longClickable="false"/>

    <ImageView
        android:id="@+id/imageView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/imageView4"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_margin="8dp"
        app:srcCompat="@drawable/arrowright"
        android:focusable="false"
        android:clickable="false"
        android:focusableInTouchMode="false"
        android:longClickable="false"
        />

</RelativeLayout>
