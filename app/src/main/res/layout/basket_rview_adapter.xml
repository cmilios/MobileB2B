<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/div"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/ordered_item_title"
        android:layout_weight="1"
        android:background="@color/colorGrey"
        android:scaleType="center"
        app:srcCompat="@drawable/divider" />

    <TextView
        android:id="@+id/ordered_item_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="8dp"
        android:layout_marginBottom="8dp"
        android:layout_marginTop="8dp"
        android:layout_toLeftOf="@id/ordered_item_qty"
        android:layout_weight="1"
        android:gravity="left|center_horizontal|start"
        android:text="TextView"
        android:textSize="14sp"
        app:fontFamily="@font/roboto"
        android:layout_alignParentLeft="true"
        android:layout_marginStart="8dp"
        android:layout_toStartOf="@id/ordered_item_qty" />

    <TextView
        android:id="@+id/ordered_item_qty"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="8dp"
        android:layout_toLeftOf="@+id/ordunt"
        android:layout_toStartOf="@+id/ordunt"
        android:gravity="top|bottom|right|end|center_vertical|fill_vertical|center_horizontal|center|end"
        android:text="TextView"
        android:textSize="14sp"
        app:fontFamily="@font/roboto"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
         />

    <TextView
        android:id="@+id/ordunt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="8dp"
        android:text="TextView" />

</RelativeLayout>
